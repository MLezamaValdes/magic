<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="[%-5p] (%F:%L) %m%n"/>
    </Console>
    <File name="FileLoggerGeneral" fileName="k:/logs/general.log" append="false">
      <PatternLayout pattern="[%p] %m%n"/>
    </File> 
  </Appenders>
  <Loggers>
    <Logger name="general" level="info">
    </Logger>
    <Root level="trace">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="FileLoggerGeneral"/>
    </Root>
  </Loggers>
</Configuration>