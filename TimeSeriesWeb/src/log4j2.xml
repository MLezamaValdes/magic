<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

 	<Appenders>
  
    	<Console name="stdout" target="SYSTEM_OUT">
      		<ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
      		<PatternLayout pattern="[%-5p] (%F:%L) %m%n"/>
    	</Console>
    
		<File name="file_tsdb_trace" fileName="logs/tsdb_trace.log" append="false">
			<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="[%p] %m%n"/>
		</File>
    
		<File name="file_tsdb_info" fileName="logs/tsdb_info.log" append="false">
			<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="[%p] %m%n"/>
		</File>
    
		<File name="file_tsdb_warn" fileName="logs/tsdb_warn.log" append="false">
			<ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="[%p] %m%n"/>
		</File>
		
		<File name="file_jepc_trace" fileName="logs/jepc_trace.log" append="false">
			<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="[%p] %m%n"/>
		</File>
    
		<File name="file_jepc_info" fileName="logs/jepc_info.log" append="false">
			<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="[%p] %m%n"/>
		</File>
    
		<File name="file_jepc_warn" fileName="logs/jepc_warn.log" append="false">
			<ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="[%p] %m%n"/>
		</File>
    
	</Appenders>
	
	<Loggers>
	
		<Logger name="tsdb" level="trace">
			<AppenderRef ref="file_tsdb_trace"/>
			<AppenderRef ref="file_tsdb_info"/>
			<AppenderRef ref="file_tsdb_warn"/>		
		</Logger>		
		
		<Logger name="de.umr.jepc" level="trace">
			<AppenderRef ref="file_jepc_trace"/>
			<AppenderRef ref="file_jepc_info"/>
			<AppenderRef ref="file_jepc_warn"/>		
		</Logger>
    
		<Root level="trace">
			<AppenderRef ref="stdout"/>			
		</Root>
	</Loggers>
	
</Configuration>